<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.sistemas.tempera.Activities.RegisterActivity"
android:layout_marginTop="30dp"
    >


<TextView
    android:id="@+id/lblTitle"
    android:layout_width="258dp"
    android:layout_height="37dp"
    android:layout_marginEnd="63dp"
    android:layout_marginStart="63dp"
    android:layout_marginTop="32dp"
    android:text="Para crear un nuevo usuario por favor ingrese los siguientes datos"
    android:textAlignment="center"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    />

<android.support.design.widget.TextInputLayout
    android:id="@+id/idNombreCultivo"
    android:layout_width="match_parent"
    android:layout_marginEnd="63dp"
    android:layout_marginStart="63dp"
    android:layout_marginTop="20dp"
    android:layout_height="50dp"
    app:layout_constraintTop_toBottomOf="@+id/lblTitle">

    <AutoCompleteTextView
        android:id="@+id/txtUsernameRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Usuario"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:textAlignment="center" />

</android.support.design.widget.TextInputLayout>

<android.support.design.widget.TextInputLayout
    android:id="@+id/idTemperaturaMax"
    android:layout_width="match_parent"
    android:layout_marginEnd="63dp"
    android:layout_marginStart="63dp"
    android:layout_marginTop="20dp"
    android:layout_height="50dp"
    app:layout_constraintTop_toBottomOf="@+id/idNombreCultivo">

    <AutoCompleteTextView
        android:id="@+id/txtPasswordRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:textAlignment="center" />

</android.support.design.widget.TextInputLayout>


<android.support.design.widget.TextInputLayout
    android:id="@+id/idTemperaturaMin"
    android:layout_width="match_parent"
    android:layout_marginEnd="63dp"
    android:layout_marginStart="63dp"
    android:layout_marginTop="20dp"
    android:layout_height="50dp"
    app:layout_constraintTop_toBottomOf="@+id/idTemperaturaMax">

    <AutoCompleteTextView
        android:id="@+id/txtRepeatPasswordRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Repetir Contraseña"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:textAlignment="center" />

</android.support.design.widget.TextInputLayout>

<Button
    app:layout_constraintTop_toBottomOf="@+id/idTemperaturaMin"
    android:layout_marginEnd="63dp"
    android:layout_marginStart="63dp"

    android:id="@+id/btnRegister"
    style="?android:textAppearanceSmall"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="Registrar"
    android:textStyle="bold"
    android:background="@drawable/border_round"
    android:textColor="@color/colorWhite"/>


</android.support.constraint.ConstraintLayout>
