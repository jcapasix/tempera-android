<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sistemas.tempera.AddCultivoActivity"
    android:layout_marginTop="30dp"
    >


    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="258dp"
        android:layout_height="37dp"
        android:layout_marginEnd="63dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="32dp"
        android:text="Para crear un nuevo cultivo por favor ingrese los siguientes datos"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/idNombreCultivo"
        android:layout_width="match_parent"
        android:layout_marginEnd="63dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/lblTitle">

        <AutoCompleteTextView
            android:id="@+id/txtNombreCultivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textAlignment="center" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/idTemperaturaMax"
        android:layout_width="match_parent"
        android:layout_marginEnd="63dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/idNombreCultivo">

        <AutoCompleteTextView
            android:id="@+id/txtTemperaturaMaxCultivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Temperatura Máxima"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:textAlignment="center" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/idTemperaturaMin"
        android:layout_width="match_parent"
        android:layout_marginEnd="63dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/idTemperaturaMax">

        <AutoCompleteTextView
            android:id="@+id/txtTemperaturaMinCultivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Temperatura Máxima"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:textAlignment="center" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/idFechaInicio"
        android:layout_width="match_parent"
        android:layout_marginEnd="63dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/idTemperaturaMin">

        <AutoCompleteTextView
            android:id="@+id/txtFechaInicioCultivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha Inicial"
            android:inputType="date"
            android:maxLines="1"
            android:singleLine="true"
            android:textAlignment="center" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/idFechaFin"
        android:layout_width="match_parent"
        android:layout_marginEnd="63dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/idFechaInicio">

        <AutoCompleteTextView
            android:id="@+id/txtFechaFinCultivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de Final"
            android:inputType="date"
            android:maxLines="1"
            android:singleLine="true"
            android:textAlignment="center" />

    </android.support.design.widget.TextInputLayout>

    <Button
        app:layout_constraintTop_toBottomOf="@+id/idFechaFin"
        android:layout_marginEnd="63dp"
        android:layout_marginStart="63dp"

        android:id="@+id/btnGuardar"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Guardar"
        android:textStyle="bold"
        android:background="@drawable/border_round"
        android:textColor="@color/colorWhite"/>


</android.support.constraint.ConstraintLayout>
