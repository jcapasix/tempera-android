<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    >
    <android.support.v7.widget.CardView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/cv_cultivo"
        card_view:cardCornerRadius="5dp"
        card_view:cardBackgroundColor="@color/colorWhite"
        card_view:cardElevation="3dp"
        card_view:cardPreventCornerOverlap="false"
        android:foreground="?selectableItemBackground"
        >
        <FrameLayout
            android:id="@+id/activeFrame"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

        </FrameLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/txtNomnbre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/txtTemperaturaMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/txtNomnbre"
                />

            <TextView
                android:id="@+id/txtTemperaturaMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginTop="5dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtNomnbre"
                app:layout_constraintLeft_toRightOf="@id/txtTemperaturaMax"
                />

            <TextView
                android:id="@+id/txtFechaInicial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/txtTemperaturaMax"
                />

            <TextView
                android:id="@+id/txtFechaFinal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/txtFechaInicial"
                />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
